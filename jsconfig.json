{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@playwright/test": ["./node_modules/@playwright/test"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "playwright-report",
    "test-results"
  ]
}

